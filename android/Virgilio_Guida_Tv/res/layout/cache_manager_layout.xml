<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content" >
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:text="@string/memory_programs"
	        android:layout_weight="1"     
	        style="@style/cacheManagerTextBold" />
	    
	    <TextView
            android:id="@+id/programsInMemory"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"   
            style="@style/cacheManagerText" />
    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content" >
	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:text="@string/memory_channels"
	        android:layout_weight="1"     
	        style="@style/cacheManagerTextBold" />
	    
	    <TextView
            android:id="@+id/channelsInMemory"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"   
            style="@style/cacheManagerText" />
    </LinearLayout>
    
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="@string/db_items"
            android:layout_weight="1"     
            style="@style/cacheManagerTextBold" />
        
        <TextView
            android:id="@+id/elementsInDB"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"   
            style="@style/cacheManagerText" />
    </LinearLayout>
    
    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1" >
    </LinearLayout>
    
    <LinearLayout android:orientation="vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content" >
                  
        <Button android:id="@+id/analyzeDB"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/buttons_analyze_db_elements" />
        <Button android:id="@+id/emptyCache"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/buttons_remove_cache_elements" />
        <Button android:id="@+id/emptyOlderDB"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/buttons_remove_older_db_elements" />
        <Button android:id="@+id/emptyDB"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/buttons_remove_db_elements" />
                
    </LinearLayout>
    
</LinearLayout>