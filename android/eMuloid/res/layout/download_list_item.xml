<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              style="@style/downloadListItem">

    <LinearLayout android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  style="@style/downloadListItemInner">
                  
	    <!-- Resource type with comment overlay -->
	    <LinearLayout android:id="@+id/download_resource_type"
	                  android:orientation="vertical"
	                  android:layout_width="16px"
	                  android:layout_height="16px"
	                  android:layout_gravity="center_vertical"
	                  android:background="@drawable/filetype_other">
	        <ImageView android:id="@+id/download_comment_status"
	                   android:layout_width="fill_parent"
	                   android:layout_height="fill_parent" />
	    </LinearLayout>
	    
	    <LinearLayout android:orientation="vertical"
	                  android:layout_width="fill_parent"
	                  android:layout_height="wrap_content">
		    
		    <TextView android:id="@+id/download_title"
		              android:layout_width="wrap_content"
		              android:layout_height="wrap_content"
		              style="@style/downloadText" />
		              
		    <LinearLayout android:orientation="horizontal"
	                      android:layout_width="fill_parent"
	                      android:layout_height="wrap_content"
	                      style="@style/downloadInfo">
	           
	           <LinearLayout android:orientation="horizontal"
	                         android:layout_width="wrap_content"
                             android:layout_height="fill_parent"
                             android:layout_weight="1">
		           <TextView android:layout_width="wrap_content"
	                         android:layout_height="wrap_content"
	                         android:text="@string/download_size"
	                         style="@style/smallText" />
	               <TextView android:id="@+id/download_size"
	                         android:layout_width="wrap_content"
	                         android:layout_height="wrap_content"
	                         style="@style/downloadInfoText" />
               </LinearLayout>
               
               <LinearLayout android:orientation="horizontal"
                             android:layout_width="wrap_content"
                             android:layout_height="fill_parent"
                             android:layout_weight="1">
	               <TextView android:layout_width="wrap_content"
	                         android:layout_height="wrap_content"
	                         android:text="@string/download_completed"
	                         style="@style/smallText" />
	               <TextView android:id="@+id/download_completed"
	                         android:layout_width="wrap_content"
	                         android:layout_height="wrap_content"
	                         style="@style/downloadInfoText" />
               </LinearLayout>
               
               <LinearLayout android:orientation="horizontal"
                             android:layout_width="wrap_content"
                             android:layout_height="fill_parent"
                             android:layout_weight="1">
	               <TextView android:layout_width="wrap_content"
	                         android:layout_height="wrap_content"
	                         android:text="@string/download_speed"
	                         style="@style/smallText" />
	               <TextView android:id="@+id/download_speed"
	                         android:layout_width="wrap_content"
	                         android:layout_height="wrap_content"
	                         style="@style/downloadInfoText" />
	           </LinearLayout>
	        </LinearLayout>
                  
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
