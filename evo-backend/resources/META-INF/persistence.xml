<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="evo-pu" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<properties>
			<property name="hibernate.show.sql" value="false"/>
	        <!-- Comment this line after entity generation -->
	        <property name="hibernate.hbm2ddl.auto" value="update"/> 
	        
	        <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
	        <property name="hibernate.connection.autocommit" value="false" />
	        
	        <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
	        <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/evo" />
	        <property name="hibernate.connection.username" value="evo" />
	        <property name="hibernate.connection.password" value="evo" />
	        <property name="hibernate.connection.pool_size" value="10" />        
        </properties>
	</persistence-unit>
</persistence>
