<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5">
    <display-name>test GWT mvn</display-name>

	<!-- Servlets -->
	<!--
	<servlet>
		<servlet-name>greetServlet</servlet-name>
		<servlet-class>com.mscg.test.server.GreetingServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>greetServlet</servlet-name>
		<url-pattern>/test_gwt/greet</url-pattern>
	</servlet-mapping>
    -->
    
	<servlet>
		<servlet-name>GWT-spring</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/spring/gwt-config.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet>
        <servlet-name>plain-spring</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>/WEB-INF/spring/app-config.xml</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>
	
	<servlet-mapping>
		<servlet-name>GWT-spring</servlet-name>
		<url-pattern>/test_gwt/services/*</url-pattern>
	</servlet-mapping>
	
    <servlet-mapping>
        <servlet-name>plain-spring</servlet-name>
        <url-pattern>/app/*</url-pattern>
    </servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>Test_GWT.html</welcome-file>
	</welcome-file-list>

</web-app>
