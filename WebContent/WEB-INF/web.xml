<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4"
 xmlns="http://java.sun.com/xml/ns/j2ee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
 <display-name>dyndns</display-name>
 <servlet>
  <servlet-name>log4j-init</servlet-name>
  <servlet-class>com.mscg.dyndns.servlet.LoggingServlet</servlet-class>
  <init-param>
   <param-name>log4j-init-file</param-name>
   <param-value>WEB-INF/log4j.properties</param-value>
  </init-param>
  <load-on-startup>1</load-on-startup>
 </servlet>
 <servlet>
  <description>Configuration Loader</description>
  <display-name>Configuration Loader</display-name>
  <servlet-name>configuration-loader</servlet-name>
  <servlet-class>com.mscg.dyndns.servlet.ConfigurationServlet</servlet-class>
  <load-on-startup>2</load-on-startup>
 </servlet>
 <servlet>
  <description>IP storage servlet</description>
  <display-name>IP storage</display-name>
  <servlet-name>ipstorage</servlet-name>
  <servlet-class>com.mscg.dyndns.servlet.IPStorageServlet</servlet-class>
  <load-on-startup>3</load-on-startup>
 </servlet>
 <servlet>
  <description>IP read servlet</description>
  <display-name>IP read servlet</display-name>
  <servlet-name>ipread</servlet-name>
  <servlet-class>com.mscg.dyndns.servlet.IPReadServlet</servlet-class>
  <load-on-startup>4</load-on-startup>
 </servlet>
 <servlet-mapping>
  <servlet-name>ipstorage</servlet-name>
  <url-pattern>/ipstorage</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>ipread</servlet-name>
  <url-pattern>/ipread</url-pattern>
 </servlet-mapping>
 <welcome-file-list>
  <welcome-file>index.html</welcome-file>
  <welcome-file>index.htm</welcome-file>
  <welcome-file>index.jsp</welcome-file>
  <welcome-file>default.html</welcome-file>
  <welcome-file>default.htm</welcome-file>
  <welcome-file>default.jsp</welcome-file>
 </welcome-file-list>
 <login-config>
  <auth-method>BASIC</auth-method>
 </login-config>
</web-app>
