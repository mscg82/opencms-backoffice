<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<contextName>playlist</contextName>

	<jmxConfigurator contextName="playlist" />

	<appender name="PL" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>log/playlist.log</File>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{DATE} %5p [%30.30c:%4L] %m%n</Pattern>
		</layout>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<maxIndex>5</maxIndex>
			<FileNamePattern>log/playlist.log.%i</FileNamePattern>
		</rollingPolicy>
		<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<MaxFileSize>2mb</MaxFileSize>
		</triggeringPolicy>
	</appender>
	<root>
		<appender-ref ref="PL" />
	</root>
	<logger name="org.red5.webapps.red5java">
		<level value="DEBUG" />
	</logger>
</configuration>
